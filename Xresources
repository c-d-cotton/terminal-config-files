!Xterm:{{{1
xterm*background: white
xterm*foreground: black
xterm*toolBar: false
!xterm*faceName: monospace:pixelsize=11
xterm*faceName: xft:bitstream vera sans mono:size=11:antialias=true

!URXVT:{{{1
URxvt.scrollBar: false
!URxvt.font: xft:bitstream vera sans mono:size=16:antialias=true
!URxvt.boldFont: xft:bitstream vera sans mono:bold:size=16:antialias=true
!URxvt.font: 7x13eurobold
! URxvt.font: xft:UbuntuMono-R:pixelsize=14

! URxvt.font: xft:DejaVuSansMono-BoldOblique:pixelsize=13
! URxvt.letterSpace: -1

! URxvt*background: black
! URxvt*foreground: white

! Copied from http://unix.stackexchange.com/questions/81746/how-can-i-get-better-looking-fonts-in-my-terminal-urxvt
URxvt.font:     xft:bitstream vera sans mono:size=11:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=11:antialias=true
URxvt.letterSpace: -1

